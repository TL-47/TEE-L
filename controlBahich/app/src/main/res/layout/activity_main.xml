<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saisir les donnÃ©es :"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            >

        </TextView>

        <EditText
            android:id="@+id/nomtxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Nom"
            android:layout_marginTop="200dp">


        </EditText>

        <EditText
            android:id="@+id/voltxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Vol"
            android:layout_below="@+id/nomtxt"
            android:layout_centerHorizontal="true">

        </EditText>
        <EditText
            android:id="@+id/datetxt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Dates de vaccination"
            android:layout_below="@+id/voltxt"
            android:layout_centerHorizontal="true">

        </EditText>
        <Button
            android:id="@+id/ajouter"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datetxt"
            android:layout_centerHorizontal="true"
            android:text="AJOUTER">

        </Button>
        <Button
            android:id="@+id/modifier"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ajouter"
            android:layout_centerHorizontal="true"
            android:text="MODIFIER">

        </Button>
        <Button
            android:id="@+id/supprimer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/modifier"
            android:layout_centerHorizontal="true"
            android:text="SUPPRIMER">

        </Button>




    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>